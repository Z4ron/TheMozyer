<Window x:Class="TheMozyer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Width="1366" Height="768" WindowStyle="None" ResizeMode="NoResize" Closing="Window_Closing">
    <Grid>

        <Button Name="Emergency" Content="EMERGENCY" HorizontalAlignment="Left" Margin="1128,430,0,0" VerticalAlignment="Top" Width="220" Height="320" Background="Red" FontSize="30" FontWeight="Bold" Foreground="White" Click="ButtonClickHandler"/>
        <Button Name="Medication" Content="Medications" HorizontalAlignment="Left" Margin="1128,220,0,0" VerticalAlignment="Top" Width="220" Height="200" FontSize="25" Click="ButtonClickHandler"/>
        <Button Name="Vitals"  Content="Vitals" HorizontalAlignment="Left" Margin="1128,10,0,0" VerticalAlignment="Top" Width="220" Height="200" FontSize="25" Click="ButtonClickHandler"/>
        <Button Name="Settings" Content="Settings" HorizontalAlignment="Left" Margin="15,664,0,0" VerticalAlignment="Top" Width="100" Height="85" FontSize="25" Click="ButtonClickHandler"/>

        <TextBox Name="Notifications" HorizontalAlignment="Left" Height="75" Margin="15,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="1070" FontSize="45" Background="{x:Null}" BorderBrush="{x:Null}"/>
        <TextBox Name="HeartRate" HorizontalAlignment="Left" Height="75" Margin="15,90,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="125" FontSize="45" Background="{x:Null}"  BorderBrush="{x:Null}" FontFamily="Arial"/>
        <TextBox Name="time" HorizontalAlignment="Left" Height="84" Margin="120,665,0,0" TextWrapping="Wrap" Text="Time" VerticalAlignment="Top" Width="405" FontSize="45" Background="{x:Null}" Foreground="Black" BorderBrush="{x:Null}"/>
        <TextBox Name="date" HorizontalAlignment="Left" Height="84" Margin="530,665,0,0" TextWrapping="Wrap" Text="Date" VerticalAlignment="Top" Width="555" FontSize="45" Background="{x:Null}" Foreground="Black" BorderBrush="{x:Null}"/>
        <Image HorizontalAlignment="Left" Height="75" Margin="156,90,0,0" VerticalAlignment="Top" Width="71" Source="download.jpg"/>
        <TextBox Name="Systolic" HorizontalAlignment="Left" Height="75" Margin="415,90,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="125" BorderBrush="{x:Null}" FontFamily="Arial" FontSize="45"/>
        <TextBox Name="Diastolic" HorizontalAlignment="Left" Height="75" Margin="566,90,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="125" BorderBrush="{x:Null}" FontFamily="Arial" FontSize="45"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="712,75,0,0" VerticalAlignment="Top" Width="100" Source="download (1).jpg"/>
        <Label Content="Systolic" HorizontalAlignment="Left" Margin="430,170,0,0" VerticalAlignment="Top" Width="95" Height="40" FontFamily="Arial" FontSize="22"/>
        <Label Content="Diastolic" HorizontalAlignment="Left" Margin="582,170,0,0" VerticalAlignment="Top" Width="95" Height="40" FontFamily="Arial" FontSize="22"/>

    </Grid>
</Window>
