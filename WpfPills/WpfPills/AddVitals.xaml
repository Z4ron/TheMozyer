                    <TranslateTransform/>
                </TransformGroup>
            </CheckBox.RenderTransform>
        </CheckBox>
        <CheckBox x:Name="EveryDayBox" Content="Heart Rate" HorizontalAlignment="Left" Margin="380,156,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="40" Width="144" FontSize="18.667">
