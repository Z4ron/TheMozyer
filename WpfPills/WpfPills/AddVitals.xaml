            </CheckBox.RenderTransform>
        </CheckBox>
        <CheckBox x:Name="MondayBox" Content="Blood Pressure" HorizontalAlignment="Left" Margin="27,158,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="40" Width="146" FontSize="18.667" Grid.Column="1">
